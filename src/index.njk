---
title: Chase Woodford | Designer & Developer
layout: layout.njk
pagination:
  data: collections.post
  size: 5
  reverse: true
  alias: posts
---

<div class="row">
    <div class="col-12 col-lg-10 mb-4 mx-auto">
        <div class="d-flex flex-row align-items-center border-bottom pb-1 mb-3">
            <h3 class="p-0 m-0 me-auto">Posts</h3>
            <nav>
                <ul class="pagination pagination-posts mb-0">
                    {% if pagination.href.previous %}
                        <li class="page-item">
                            <a class="page-link px-1" href="{{ pagination.href.previous }}" title="Newer Posts"><i class="bi bi-caret-left-fill"></i></a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <a class="page-link px-1" href="{{ pagination.href.previous }}" title="Newer Posts"><i class="bi bi-caret-left-fill"></i></a>
                        </li>
                    {% endif %}
                    {% if pagination.href.next %}
                        <li class="page-item">
                            <a class="page-link px-1" href="{{ pagination.href.next }}" title="Older Posts"><i class="bi bi-caret-right-fill"></i></a>
                        </li>
                    {% else %}
                        <li class="page-item disabled">
                            <a class="page-link px-1" href="{{ pagination.href.next }}" title="Older Posts"><i class="bi bi-caret-right-fill"></i></a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
        {% if posts.length %}
            {% for post in posts %}
                {{ post.data.page.url | log }}
                <a href="{{ post.url | url }}" class="fw-bold text-decoration-none">
                    {{ post.data.title }}
                </a>
                <p class="fst-italic text-muted small">{{ post.data.date | readableDate }}</p>
            {% endfor %}
        {% else %}
            <p class="text-muted">No posts exist.</p>
        {% endif %}
    </div>
</div>
<div class="row">
    <div class="col-12 col-lg-10 mb-4 mx-auto">
        <h3 class="border-bottom pb-1 mb-3">Projects</h3>
        <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 row-cols-xxl-4 g-4">
            {% if collections.project.length %}
                {% for project in collections.project | reverse %}
                    {{ project.data.page | log }}
                    <div class="col">
                        <a href="{{ project.url | url }}" class="text-decoration-none">
                        <div class="card card-project h-100">
                            <img class="card-img-top"
                                 alt="{{ project.data.featuredImageAlt }}"
                                 src={{ project.url }}{{ project.data.featuredImage }}>
                            <div class="card-body">
                                <h6 class="card-title">{{ project.data.title }}</h6>
                                <p class="card-text small text-secondary">{{ project.data.projectDescription }}</p>
                            </div>
                        </div>
                        </a>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">No projects exist.</p>
            {% endif %}
        </div>
    </div>
</div>