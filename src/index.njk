---
title: Home
layout: layout.njk
pagination:
  data: collections.post
  size: 6
  reverse: true
  alias: posts
---
<section>
    <h1 class="text-5xl text-center">Hi, I'm Chase.</h1>

    {% for post in posts %}
        {{ post.data.page | log }}
        {# TODO: style post list #}
        <div class="px-8 py-6 lg:w-1/3 md:w-full">
            <div class="p-6 rounded-md bg-blueGray-200">
                <img src={{ post.url}}{{post.data.featuredImage}} alt="content" width="200">
                <h2> {{ post.data.title }}</h2>
                <p>{{post.data.page.excerpt }}</p>
                <a href="{{ post.url | url }}">
                    Read More
                </a>
            </div>
        </div>
    {% endfor %}

</section>